{
  "name": "monilla",
  "version": "0.0.9",
  "description": "Manage your monorepo dependencies in a vanilla-esque manner.",
  "homepage": "https://github.com/ctrlplusb/monilla",
  "engines": {
    "node": ">=16.13.0",
    "npm": ">=8.8.0"
  },
  "engineStrict": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/ctrlplusb/monilla.git"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "monilla": "dist/cli.mjs"
  },
  "scripts": {
    "build": "tsup-node src/cli.ts --sourcemap inline --format esm --target node16",
    "lint": "eslint . --ext .js,.ts,.json",
    "prepare": "npm run build",
    "test": "vitest",
    "typecheck": "tsc"
  },
  "keywords": [
    "monorepo",
    "node",
    "cli",
    "npm",
    "yarn"
  ],
  "author": "Sean Matheson",
  "license": "MIT",
  "dependencies": {
    "child-process-toolbox": "^3.0.4",
    "find-up": "^6.3.0",
    "fs-extra": "^10.1.0",
    "globby": "^13.1.1",
    "npm-packlist": "^5.0.4",
    "p-series": "^3.0.0",
    "read-pkg": "^7.1.0",
    "semver": "^7.3.7",
    "ts-custom-error": "^3.2.0",
    "type-fest": "^2.12.2",
    "write-pkg": "^5.1.0",
    "yargs": "^17.5.1",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^16.11.35",
    "@types/npm-packlist": "^3.0.0",
    "@types/semver": "^7.3.9",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.6.2",
    "tempy": "^3.0.0",
    "tsup": "^5.12.8",
    "typescript": "^4.7.0-beta",
    "vitest": "^0.12.9"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "plugin:prettier/recommended"
    ],
    "env": {
      "es2021": true,
      "node": true
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    },
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    }
  },
  "eslintIgnore": [
    "dist"
  ],
  "prettier": {
    "trailingComma": "all"
  }
}
