{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2020",
    "moduleResolution": "Node",
    "noEmit": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src", "tests"]
}
